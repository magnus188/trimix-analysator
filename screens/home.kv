#:kivy 2.0.0

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)

        Label:
            text: 'Main Menu'
            font_size: '32sp'
            size_hint_y: None  # Fixed height for navbar
            height: dp(60)
            color: 1, 1, 1, 1
            halign: 'center'
            valign: 'middle'

        # GridLayout positioned at the top
        GridLayout:
            cols: 2
            rows: 2
            spacing: dp(15)
            padding: dp(10)
            size_hint: 1, None  # Set width to full, height fixed
            height: dp(400)  # Fixed height for the grid

            # Analyzer Card
            MenuCard:
                id: analyzer_card
                title: 'Analyzer'
                on_press: root.navigate_to_screen('analyze')  # Navigate to 'analyze' screen

            # Dive Planner Card
            MenuCard:
                id: planner_card
                title: 'Dive Planner'
                on_press: root.navigate_to_screen('dive_planner')  # Navigate to 'dive_planner' screen

            # History Card
            MenuCard:
                id: history_card
                title: 'History'
                on_press: root.navigate_to_screen('history')  # Navigate to 'history' screen

            # Settings Card
            MenuCard:
                id: settings_card
                title: 'Settings'
                on_press: root.navigate_to_screen('settings')  # Navigate to 'settings' screen

        # Empty widget to fill remaining space and push grid to top
        Widget:
