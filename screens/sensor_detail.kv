#:kivy 1.10.0

#:import dp kivy.metrics.dp
#:import Graph kivy_garden.graph.Graph

<SensorDetail>:
    # Screen itself stays a RelativeLayout; we layer a full-screen BoxLayout inside
    BoxLayout:
        id: container
        orientation: 'vertical'
        size: root.size
        pos: root.pos
        padding: dp(10)
        spacing: dp(10)

        # ─── Navbar ────────────────────────────────────────────────────────
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)

            Button:
                text: 'Back'
                size_hint_x: None
                width: dp(60)
                on_release: root.manager.current = 'analyze'

            Label:
                text: root.sensor_label
                font_size: '42sp'
                color: [1, 1, 1, 1]  # White
                halign: 'center'
                valign: 'middle'
                text_size: self.size

        # ─── Live reading ──────────────────────────────────────────────────
        Label:
            text: root.live_value
            font_size: '56sp'
            bold: True
            color: root.theme_color
            size_hint_y: None
            height: dp(100)
            halign: 'center'
            valign: 'middle'
            text_size: self.size

        # ─── Graph (landscape-ish) ─────────────────────────────────────────
        Graph:
            id: graph
            size_hint_y: 0.4      # bottom 40% of this BoxLayout
            xmin: 0
            xmax: 60
            x_ticks_minor: 5
            x_ticks_major: 15
            y_ticks_major: 5
            y_grid: True
            x_grid: True
            padding: dp(10)
            height: self.width * 0.4  