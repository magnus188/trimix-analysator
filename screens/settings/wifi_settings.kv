#:kivy 2.0.0

<WiFiNetwork>:
    canvas.before:
        Color:
            rgba: 0.15, 0.15, 0.15, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(5),]
            
    # SSID and connection status
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.5
        
        Label:
            text: root.ssid + (' (Connected)' if root.ssid == app.root.get_screen('wifi_settings').connected_network else '')
            font_size: '18sp'
            color: (0.2, 0.8, 0.2, 1) if root.ssid == app.root.get_screen('wifi_settings').connected_network else (1, 1, 1, 1)
            text_size: self.size
            halign: 'left'
            valign: 'center'
            
        Label:
            text: f'Security: {root.security}'
            font_size: '14sp'
            color: 0.7, 0.7, 0.7, 1
            text_size: self.size
            halign: 'left'
            valign: 'center'
    
    # Signal strength
    Label:
        text: root.signal_strength
        font_size: '16sp'
        color: 1, 1, 1, 1
        size_hint_x: 0.2
        halign: 'center'
        valign: 'center'
    
    # Connect button
    Button:
        text: 'Disconnect' if root.ssid == app.root.get_screen('wifi_settings').connected_network else 'Connect'
        font_size: '16sp'
        size_hint_x: 0.3
        background_color: (0.8, 0.2, 0.2, 1) if root.ssid == app.root.get_screen('wifi_settings').connected_network else (0.2, 0.6, 0.2, 1)
        on_press: root.on_button_press()

<WiFiSettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)

        # Header with back button and title
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)
            spacing: dp(20)

            Button:
                text: '‚Üê Back'
                font_size: '20sp'
                size_hint_x: None
                width: dp(120)
                background_color: 0.2, 0.2, 0.2, 1
                color: 1, 1, 1, 1
                on_press: root.navigate_back()

            Label:
                text: 'WiFi Settings'
                font_size: '32sp'
                color: 1, 1, 1, 1
                halign: 'center'
                valign: 'middle'

            Button:
                text: 'üîÑ Scan'
                font_size: '20sp'
                size_hint_x: None
                width: dp(120)
                background_color: 0.2, 0.4, 0.6, 1
                color: 1, 1, 1, 1
                on_press: root.scan_networks()

        # Connection status
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)
            
            Label:
                text: 'Status:'
                font_size: '20sp'
                color: 1, 1, 1, 1
                size_hint_x: None
                width: dp(80)
                halign: 'left'
                valign: 'center'
                
            Label:
                text: f'Connected to: {root.connected_network}' if root.connected_network else 'Not connected'
                font_size: '18sp'
                color: (0.2, 0.8, 0.2, 1) if root.connected_network else (0.8, 0.8, 0.2, 1)
                halign: 'left'
                valign: 'center'

        # Available networks header
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(40)
            spacing: dp(10)
            
            Label:
                text: 'Available Networks'
                font_size: '24sp'
                color: 1, 1, 1, 1
                halign: 'left'
                valign: 'center'
                size_hint_x: 0.5
                
            Label:
                text: 'Signal'
                font_size: '18sp'
                color: 0.7, 0.7, 0.7, 1
                halign: 'center'
                valign: 'center'
                size_hint_x: 0.2
                
            Label:
                text: 'Action'
                font_size: '18sp'
                color: 0.7, 0.7, 0.7, 1
                halign: 'center'
                valign: 'center'
                size_hint_x: 0.3

        # Separator line
        Widget:
            size_hint_y: None
            height: dp(2)
            canvas:
                Color:
                    rgba: 0.3, 0.3, 0.3, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        # Scrollable networks list
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                id: networks_container
                orientation: 'vertical'
                spacing: dp(10)
                size_hint_y: None
                height: self.minimum_height
                padding: dp(5)

        # Instructions at bottom
        Label:
            text: 'Tap "Scan" to refresh the network list\nTap "Connect" to join a network'
            font_size: '14sp'
            color: 0.6, 0.6, 0.6, 1
            size_hint_y: None
            height: dp(40)
            halign: 'center'
            valign: 'center'
