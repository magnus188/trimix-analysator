#:kivy 2.0.0

<DisplaySettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Navigation bar
        NavBar:
            title: 'Display Settings'
            show_left_button: True
            left_button_text: '‚Üê Back'
            show_right_button: False
            left_button_callback: root.navigate_back
            navbar_height: 75
            title_font_size: 24
        
        # Content area
        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(30)

            # Spacer to balance the layout
            Widget:
                size_hint_x: None
                width: dp(120)

        # Add extra spacer after header
        Widget:
            size_hint_y: None
            height: dp(40)  # Increased from 20dp to push content further down

        # Main content area
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(30)
            padding: [dp(20), dp(30), dp(20), dp(20)]  # left, top, right, bottom - added more top padding

            # Brightness section
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(25)
                size_hint_y: None
                height: dp(200)  # Reduced height since we removed labels

                Label:
                    text: 'Screen Brightness'
                    font_size: '24sp'
                    color: 1, 1, 1, 1
                    halign: 'center'
                    valign: 'center'
                    size_hint_y: None
                    height: dp(30)

                # Current brightness percentage only
                Label:
                    text: f'{int(root.brightness)}%'
                    font_size: '40sp'  # Bigger percentage display
                    color: 0.2, 0.8, 0.2, 1
                    halign: 'center'
                    valign: 'center'
                    size_hint_y: None
                    height: dp(50)

                # Brightness slider with visual indicators
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: dp(20)
                    size_hint_y: None
                    height: dp(100)  # Much bigger slider area

                    # Dim icon/indicator
                    Label:
                        text: 'üîÖ'
                        font_size: '32sp'  # Bigger icons
                        color: 0.6, 0.6, 0.6, 1
                        size_hint_x: None
                        width: dp(50)
                        halign: 'center'
                        valign: 'center'

                    # Brightness slider
                    BoxLayout:
                        orientation: 'vertical'
                        
                        Widget:
                            size_hint_y: 0.3
                        
                        Slider:
                            id: brightness_slider
                            min: 10
                            max: 100
                            value: root.brightness
                            step: 5
                            orientation: 'horizontal'
                            size_hint_y: 0.4
                            on_value: root.on_brightness_change(self.value)
                            
                            canvas.before:
                                Color:
                                    rgba: 0.3, 0.3, 0.3, 1
                                RoundedRectangle:
                                    pos: self.x, self.center_y - dp(8)  # Thicker track
                                    size: self.width, dp(16)
                                    radius: [dp(8),]
                            
                            canvas.after:
                                Color:
                                    rgba: 0.2, 0.8, 0.2, 1
                                RoundedRectangle:
                                    pos: self.x, self.center_y - dp(8)
                                    size: (self.value_normalized * self.width), dp(16)
                                    radius: [dp(8),]
                        
                        Widget:
                            size_hint_y: 0.3

                    # Bright icon/indicator
                    Label:
                        text: 'üîÜ'
                        font_size: '32sp'  # Bigger icons
                        color: 1, 1, 0.6, 1
                        size_hint_x: None
                        width: dp(50)
                        halign: 'center'
                        valign: 'center'

            # Quick preset buttons
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(15)
                size_hint_y: None
                height: dp(120)

                Label:
                    text: 'Quick Presets'
                    font_size: '24sp'
                    color: 1, 1, 1, 1
                    halign: 'center'
                    valign: 'center'
                    size_hint_y: None
                    height: dp(40)

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: dp(15)
                    size_hint_y: None
                    height: dp(60)

                    Button:
                        text: '25%'
                        font_size: '18sp'
                        background_color: 0.3, 0.3, 0.3, 1
                        color: 1, 1, 1, 1
                        on_press: root.brightness = 25; root._apply_brightness()

                    Button:
                        text: '50%'
                        font_size: '18sp'
                        background_color: 0.3, 0.3, 0.3, 1
                        color: 1, 1, 1, 1
                        on_press: root.brightness = 50; root._apply_brightness()

                    Button:
                        text: '75%'
                        font_size: '18sp'
                        background_color: 0.3, 0.3, 0.3, 1
                        color: 1, 1, 1, 1
                        on_press: root.brightness = 75; root._apply_brightness()

                    Button:
                        text: '100%'
                        font_size: '18sp'
                        background_color: 0.3, 0.3, 0.3, 1
                        color: 1, 1, 1, 1
                        on_press: root.brightness = 100; root._apply_brightness()

            # Sleep Timeout section
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(15)
                size_hint_y: None
                height: dp(120)

                Label:
                    text: 'Screen Sleep Timeout'
                    font_size: '24sp'
                    color: 1, 1, 1, 1
                    halign: 'center'
                    valign: 'center'
                    size_hint_y: None
                    height: dp(30)

                Label:
                    text: 'Never' if root.sleep_timeout == 0 else f'{int(root.sleep_timeout)} min'
                    font_size: '20sp'
                    color: 0.2, 0.6, 0.8, 1
                    halign: 'center'
                    valign: 'center'
                    size_hint_y: None
                    height: dp(30)

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: dp(10)
                    size_hint_y: None
                    height: dp(50)

                    Button:
                        text: '1 min'
                        font_size: '16sp'
                        background_color: (0.2, 0.6, 0.8, 1) if root.sleep_timeout == 1 else (0.3, 0.3, 0.3, 1)
                        color: 1, 1, 1, 1
                        on_press: root.on_sleep_timeout_change(1)

                    Button:
                        text: '2 min'
                        font_size: '16sp'
                        background_color: (0.2, 0.6, 0.8, 1) if root.sleep_timeout == 2 else (0.3, 0.3, 0.3, 1)
                        color: 1, 1, 1, 1
                        on_press: root.on_sleep_timeout_change(2)

                    Button:
                        text: '5 min'
                        font_size: '16sp'
                        background_color: (0.2, 0.6, 0.8, 1) if root.sleep_timeout == 5 else (0.3, 0.3, 0.3, 1)
                        color: 1, 1, 1, 1
                        on_press: root.on_sleep_timeout_change(5)

                    Button:
                        text: '10 min'
                        font_size: '16sp'
                        background_color: (0.2, 0.6, 0.8, 1) if root.sleep_timeout == 10 else (0.3, 0.3, 0.3, 1)
                        color: 1, 1, 1, 1
                        on_press: root.on_sleep_timeout_change(10)

                    Button:
                        text: 'Never'
                        font_size: '16sp'
                        background_color: (0.2, 0.6, 0.8, 1) if root.sleep_timeout == 0 else (0.3, 0.3, 0.3, 1)
                        color: 1, 1, 1, 1
                        on_press: root.on_sleep_timeout_change(0)

            # Additional display info
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(10)

        # Bottom spacer
        Widget:
