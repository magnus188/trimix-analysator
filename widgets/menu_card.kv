#:kivy 2.0.0

<MenuCard>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)
    # Make the background color dynamic
    canvas.before:
        Color:
            rgba: 0.15, 0.15, 0.15, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(8),]

    # Label below the icon
    Label:
        text: root.title
        font_size: '24sp'
        color: 1, 1, 1, 1
        size_hint_y: None
        height: self.texture_size[1]
        valign: 'middle'
        halign: 'center'
