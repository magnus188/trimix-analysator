#:kivy 1.0
#:import dp kivy.metrics.dp

<SensorCard@ButtonBehavior+BoxLayout>:
    orientation: 'vertical'
    padding: dp(8)
    spacing: dp(4)
    width: dp(160)  # Reduced width
    height: dp(140)  # Reduced height
    # simply dim the card when state is 'down'
    opacity: 0.6 if self.state=='down' else 1

    # background
    canvas.before:
        Color:
            rgba: 0.15, 0.15, 0.15, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(8),]
    Label:
        text: root.title
        font_size: '28sp'  # Reduced font size
        size_hint_y: None
        height: self.texture_size[1]
        color: 1,1,1,1
    Label:
        text: root.value
        font_size: '40sp'  # Reduced font size
        bold: True
        color: root.theme_color
